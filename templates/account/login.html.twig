{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}

<div class="container mt-5">

	<div class="row">

		<div class="offset-3 jumbotron py-3 px-3">

			<h1>Connectez vous</h1>

            {% if hasError %}

               <div class="alert alert-danger col-md-5">Une erreur est survenue, l'identifiant ou le mot de passe est invalide</div>

            {% endif %}

			<form action="{{path("account_login")}}" method="post">

				<div class="form-group col-md-5 mt-3">
					<label for="email">Email</label>
					<input type="text" name="_username" id="email" class="form-control" placeholder="Adresse mail" required value="{{username}}">
				</div>

				<div class="form-group col-md-5 mt-3">
					<label for="password">Mot de passe</label>
					<input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
				</div>

                <div class="form-group mt-3">
					<button type="submit" class="btn btn-primary">Connexion</button>
				</div>

			</form>
		</div>
	</div>
</div>


{% endblock %}
