{% endblock %}
{% block body %}

    <!-- Titre -->
	<div class="ad-title" style="background-image:url({{ad.coverImage}})">
		<div class="container mt-5">
			<h1>{{ad.title}}</h1>
			<p>{{ad.introduction}}</p>
			<p class="h5">{{ad.rooms}}chambres pour<strong>{{ad.price}}
